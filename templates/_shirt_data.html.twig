<div class="col-4 p-0">
    <div class="d-flex justify-content-center mb-4">
        <div class="card mx-3 my-3">
            {% if(shirt.image is null) %}
                <a href="{{ path('shirt_show', {'id': shirt.id}) }}"><img src="/images/defaultImage/NotFound.jpg" class="card-img-top" alt="{{ shirt.title }}"></a>
            {% else %}
                <a href="{{ path('shirt_show', {'id': shirt.id}) }}"><img src="{{ asset(posters_dir ~'/'~ shirt.image) | imagine_filter('my_thumb') }}" class="card-img-top" alt="{{ shirt.title }}"></a>
            {% endif %}
            <div class="card-body">
                <h5 class="card-title">{{ shirt.title }}</h5>
                <p class="card-text text-truncate">{{ shirt.description }}</p>
                <p class="card-text">{{ shirt.user.name }}</p>
                <p class="card-text"> {{ shirt.uploaddate | date("d-m-Y") }} </p>
                <div class="d-flex">
                    <a href="{{ path('shirt_show', {'id': shirt.id}) }}" class="btn btn-primary me-1">View shirt</a>
                    {% if (app.user == shirt.user or is_granted('ROLE_ADMIN')) %}
                        <a href="{{ path('shirt_edit', {'id': shirt.id}) }}" class="btn btn-secondary me-1"><i class="bi bi-pencil-square"></i></a>
                        {{ include('shirt/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>