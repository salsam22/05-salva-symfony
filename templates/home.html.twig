{% extends 'base.html.twig' %}

{% block title %}HOME{% endblock %}

{% block body %}

    <div class="d-flex justify-content-end mt-5 me-5">
        <div class="btn-group dropstart">
            <form method="post" class="d-flex">
                <select class="form-select mb-3 d-inline me-2" name="category">
                    <option value="" disabled selected>
                        Categories
                    </option>
                    {% if categories %}
                        {% for category in categories %}
                            {{ include ('_category_data.html.twig', {'category': category }) }}
                        {% endfor %}
                    {% else %}
                        <p>No category found</p>
                    {% endif %}
                </select>
                <input type="submit" class="btn btn-secondary mb-3" value="Filtra"/>
            </form>
        </div>
    </div>
    <div class="container">
        <div class="row mt-5">
            {% if shirts %}
                {% for shirt in shirts %}
                    {{ include ('_shirt_data.html.twig', {'shirt': shirt }) }}
                {% endfor %}
            {% else %}
                <p>No shirts found</p>
            {% endif %}
        </div>
        <div class="row mt-3">
            <div class="col-12 d-flex justify-content-center">
                <div class="pagination">
                    {{ knp_pagination_render(shirts) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
