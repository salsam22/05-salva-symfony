{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-12 text-center mt-4">
                <h1 class="h3 mb-3">Login</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label for="inputUsername">Username</label>
                <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control mb-3" autocomplete="username" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
            </div>
        </div>
        <div class="row">
            <div class="col-12 mt-4">
                <button class="btn btn-lg btn-outline-secondary" type="submit">
                    Login
                </button>
            </div>
        </div>
    </div>
</form>

{% endblock %}
