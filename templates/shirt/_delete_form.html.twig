<form method="post" action="{{ path('shirt_delete', {'id': shirt.id}) }}" onsubmit="return confirm('Are you sure you want to delete this shirt?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shirt.id) }}">
    <button class="btn btn-secondary d-inline"><i class="bi bi-trash"></i></button>
</form>
