{% extends 'base.html.twig' %}

{% block title %}{{ app.user.name }} shirts{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                {% if shirts %}
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Title</th>
                                <th scope="col">Description</th>
                                <th scope="col">Upload Date</th>
                                <th scope="col">Category</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for shirt in shirts %}
                            <tr>
                                <th scope="row">{{ shirt.id }}</th>
                                <td>{{ shirt.title }}</td>
                                <td>{{ shirt.description }}</td>
                                <td>{{ shirt.uploaddate ? shirt.uploaddate|date('Y-m-d') }}</td>
                                <td>{{ shirt.category.name }}</td>
                                <td>
                                    <a href="{{ path('shirt_show', {'id': shirt.id}) }}" class="btn btn-secondary mb-1"><i class="bi bi-list"></i></a>
                                    <a href="{{ path('shirt_edit', {'id': shirt.id}) }}" class="btn btn-secondary mb-1"><i class="bi bi-pencil-square"></i></a>
                                    {{ include('shirt/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>No shirts found</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}