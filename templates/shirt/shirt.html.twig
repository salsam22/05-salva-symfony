{% extends 'base.html.twig' %}

{% block title %}{{ shirt.title }}{% endblock %}

{% block body %}
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <div class="card mb-3" style="max-width: 1024px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="{{ asset(posters_dir ~'/'~ shirt.image) | imagine_filter('my_thumb') }}" class="img-fluid" alt="{{ shirt.title }}<">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{ shirt.title }}</h5>
                                <p class="card-text">{{ shirt.description }}</p>
                                <div class="card-text mb-3">
                                    <a href="{{ path('user_show', {'id': shirt.user.id}) }}" class="card-text">{{ shirt.user.name }}</a>
                                </div>
                                <div class="card-text">
                                    <a href="{{ path('message_new')}}"><button class="btn btn-outline-secondary btn-lg"><i class="bi bi-envelope-plus-fill"></i></button></a>
                                    <a href="#"><button class="btn btn-outline-secondary btn-lg"><i class="bi bi-cart-plus-fill"></i></button></a>
                                </div>
                                <p class="card-text mt-3">
                                    <small class="text-muted">{{ shirt.uploaddate | date("d-m-Y") }}</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
