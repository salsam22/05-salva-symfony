{% extends 'base.html.twig' %}

{% block title %}{{ user.name }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mt-4 mb-4">
            <div class="col-12 text-center">
                <h1>{{ user.name }}</h1>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-3">
                <div class="text-center">
                    <img width="250px" class="rounded-circle" src="/images/my_thumb/imgAvatar/{{ user.avatar }}" alt="avatar del usuario {{ user.name }}"/>
                </div>
            </div>
            <div class="col-6 text-center">
                <table class="table">
                    <tbody>
                    <tr>
                        <th class="text-end">Name: </th>
                        <td>{{ user.name }}</td>
                    </tr>
                    <tr>
                        <th class="text-end">Email: </th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th class="text-end">Username: </th>
                        <td>{{ user.username }}</td>
                    </tr>
                    {% if (app.user == user or is_granted('ROLE_ADMIN'))%}
                    <tr>
                        <th></th>
                        <td><a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-secondary me-1"><i class="bi bi-pencil-square"></i></a></td>
                    </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <div class="col-3"></div>
        </div>
        <div class="row mt-5">
            <div class="col-12 text-center">
                <h1>{{ user.name }} shirts</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-5">
            {% if shirts %}
                {% for shirt in shirts %}
                    {{ include ('_shirt_data.html.twig', {'shirt': shirt }) }}
                {% endfor %}
            {% else %}
                <p>No shirts found</p>
            {% endif %}
        </div>
        <div class="row mt-3">
            <div class="col-12 d-flex justify-content-center">
                <div class="pagination">
                    {{ knp_pagination_render(shirts) }}
                </div>
            </div>
        </div>
    </div>




